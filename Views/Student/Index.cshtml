@model IEnumerable<StudentPortal.Models.Student>
@{
    ViewData["Title"] = "Students";
}

<h2 class="mb-3">Students</h2>

<p><a class="btn btn-primary" href="/Student/Create">Add Student</a></p>

<table class="table table-striped">
    <thead>
        <tr><th>Id</th><th>Name</th><th>Age</th><th></th></tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Id</td>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>
                <a class="btn btn-sm btn-outline-secondary" href="/Student/Edit/@s.Id">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>